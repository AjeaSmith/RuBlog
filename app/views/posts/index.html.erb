<%= render 'shared/navbar' %>
<%= render 'shared/jumbo' %>
<section class="container mt-5">
    <%# loop through posts and get them %>
    <% @post.each do |post| %>
       <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= post.title %></h5>
                <h5 class="card-title"><%= post.id %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= post.updated_at %></h6>
                <p class="card-text"><%= post.content %></p>
                <%= link_to 'View post', post, class:'mr-2'%>
                <%= link_to 'Edit', edit_post_path(post), class:'text-info mr-2'%>
                <%= link_to 'Delete', post, class:'text-danger'%>
            </div>
        </div>
    <% end %>
</section>