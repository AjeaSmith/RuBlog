<div class="container mt-5">
    <%= simple_form_for @post do |f| %>
        <div class="form-group">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :content %>
            <%= f.text_area :content, class: "form-control" %>
        </div>
        <%= f.button :submit, class: 'btn btn-primary'%>
    <% end %>
</div>